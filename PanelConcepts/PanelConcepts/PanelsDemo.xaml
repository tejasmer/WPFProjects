<Window x:Class="PanelConcepts.PanelsDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelConcepts"
        mc:Ignorable="d"
        Title="Panels Demo" Height="300" Width="300">
    <StackPanel>
        <Button Click="Button_Click">
            <TextBlock TextWrapping="Wrap">
            Stack Panel Demo (2 Stack Panels)
            </TextBlock>
        </Button>
        <Button Click="Button_Click_1" >
            <TextBlock TextWrapping="Wrap">Buttom Templates using Resource Dictionary 
               DockPanel Demo (2 Dock Panels)
            </TextBlock>
        </Button>
        <Button  Click="Button_Click_2">
            <TextBlock TextWrapping="Wrap">
            Grid Demo
            </TextBlock>
        </Button>
        <Button  Click="Button_Click_3">
            <TextBlock TextWrapping="Wrap">
            Canvas Demo
            </TextBlock>
        </Button>
        <Button  Click="Button_Click_4">
            <TextBlock TextWrapping="Wrap">
            All Panels
            </TextBlock>
        </Button>
    </StackPanel>
</Window>
