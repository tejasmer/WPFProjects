<Window x:Class="StylesTriggersResourcesConcepts.STRDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StylesTriggersResourcesConcepts"
        mc:Ignorable="d"
        Title="Style , Trigger and Resource" Height="300" Width="300">
    <StackPanel>
        <StackPanel.Style>
            <Style>
                <Setter Property="Control.FontSize" Value="16"></Setter>
            </Style>
        </StackPanel.Style>
        <Button Click="Button_Click">
            <TextBlock TextWrapping="Wrap">
            Styles Demo (Styles at Window and Stack Panel)
            </TextBlock>
        </Button>
        <Button Click="Button_Click_1" >
            <TextBlock TextWrapping="Wrap">
                Triggers Demo (Simple Trigger, MultiTrigger , DataTrigger)
            </TextBlock>
        </Button>
        <Button  Click="Button_Click_2">
            <TextBlock TextWrapping="Wrap">
           Resource Demo
            </TextBlock>
        </Button>
    </StackPanel>
</Window>
